<div class="row">
    <%= form_for(@articles, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :title %>
            </div>
            <div class="col-sm-10">
                <%= f.text_field :title, class:"form-control", placeholder:"Titre de l'article"%>
             </div>
        </div>
            
    
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :description %>
            </div>
            <div class="col-sm-10">
                <%= f.text_area :description,  class:"form-control", placeholder:"description"%>
            </div>
        </div>
        
        
        <div class="form-group">
             <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit class:"btn btn-default" %>
            </div>
        </div>
<% end %>

</div>


